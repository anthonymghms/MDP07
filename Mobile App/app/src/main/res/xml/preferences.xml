<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="Account &amp; Security">
        <EditTextPreference
            app:key="username"
            app:title="Username" />

        <EditTextPreference
            app:key="email"
            app:title="Email" />

        <EditTextPreference
            app:key="phone_number"
            app:title="Phone Number" />

        <EditTextPreference
            app:key="first_name"
            app:title="First Name" />

        <EditTextPreference
            app:key="last_name"
            app:title="Last Name" />

        <SwitchPreferenceCompat
            app:key="two_factor_auth_enabled"
            app:title="Two Factor Authentication" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Display">
        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="Dark Mode" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Notifications">
        <SwitchPreferenceCompat
            app:key="notifications_enabled"
            app:title="Notifications Enabled" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Drowsiness Detection">
        <ListPreference
            app:key="alert_type"
            app:title="Alert Type"
            app:entries="@array/alert_type_names"
            app:entryValues="@array/alert_type_values"
            app:defaultValue="visual_and_auditory" />

        <SeekBarPreference
            app:key="alert_volume"
            app:title="Alert Volume"
            max="100"
            app:defaultValue="70" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="GPS &amp; Location">
        <SwitchPreferenceCompat
            app:key="location_sharing"
            app:title="Location Sharing" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
