<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BackOffice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BackOffice.styles.css" asp-append-version="true" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <style>
        body {
            background-image: url('/images/bg-pic.jpg');
            background-repeat: no-repeat;
            background-position: 10% 30%;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-background">
            <img id="logo" src="/images/logo.png" alt="Logo" style="width: 210px; color: white;">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" aria-haspopup="true" aria-expanded="false" data-hover="userDropdownMenu">
                            User
                        </a>
                        <div class="dropdown-menu" aria-labelledby="userDropdown" id="userDropdownMenu">
                            <a class="dropdown-item" href="@Url.Action("ManageUser","User")">Manage User</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="logsDropdown" role="button" aria-haspopup="true" aria-expanded="false" data-hover="logsDropdownMenu">
                            Logs
                        </a>
                        <div class="dropdown-menu" aria-labelledby="logsDropdown" id="logsDropdownMenu">
                            <a class="dropdown-item" href="#">Search Logs</a>
                            <a class="dropdown-item" href="#">Delete Logs</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="analyticsDropdown" role="button" aria-haspopup="true" aria-expanded="false" data-hover="analyticsDropdownMenu">
                            Analytics
                        </a>
                        <div class="dropdown-menu" aria-labelledby="analyticsDropdown" id="analyticsDropdownMenu">
                            <a class="dropdown-item" href="#">Dashboard</a>
                            <a class="dropdown-item" href="#">Reports</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="settingsDropdown" role="button" aria-haspopup="true" aria-expanded="false" data-hover="settingsDropdownMenu">
                            Settings
                        </a>
                        <div class="dropdown-menu" aria-labelledby="settingsDropdown" id="settingsDropdownMenu">
                            <a class="dropdown-item" href="#">Configuration</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="d-flex flex-row current-tab" id="page-title">
        <div class="text-white" id="menu-title">
            @ViewData["Menu"]
        </div>

        @if (ViewData["SubMenu"] != null)
        {
            <div class="text-white mx-2">
               |
            </div>

            <div class="text-white">
                @ViewData["SubMenu"]
            </div>
        }

    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer footer-text">
        <div class="container">
            &copy; 2023 - BackOffice | RoadGuard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>$(document).ready(function () {
            $('[data-hover="userDropdownMenu"]').parent().hover(function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(300);
            }, function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(300);
            });

            $('[data-hover="logsDropdownMenu"]').parent().hover(function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(300);
            }, function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(300);
            });

            $('[data-hover="analyticsDropdownMenu"]').parent().hover(function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(300);
            }, function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(300);
            });

            $('[data-hover="settingsDropdownMenu"]').parent().hover(function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(300);
            }, function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(300);
            });

            // Repeat the above code for each dropdown menu, replacing the "data-hover" attribute and ID as appropriate.
        });</script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

